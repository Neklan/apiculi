{
    "license": "MIT",
    "name": "Apiculi",
    "version": "2.0.0",
    "description": "Boilerplate for rest api with graphql.",
    "author": "Tomas Herma <tomas.herma@gmail.com>",
    "scripts": {
        "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
        "build": "babel src -s -D -d dist --presets es2015,stage-0",
        "start": "node dist",
        "prestart": "npm run -s build",
        "test": "eslint src"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 7,
            "sourceType": "module"
        },
        "env": {
            "node": true
        },
        "rules": {
            "no-console": 0,
            "no-unused-vars": 1
        }
    },
    "dependencies": {
        "apollo-errors": "^1.9.0",
        "apollo-server-express": "^2.1.0",
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "express": "^4.16.3",
        "graphql": "^14.0.2",
        "graphql-resolve-batch": "^1.0.2",
        "graphql-subscriptions": "^1.0.0",
        "graphql-tools": "^4.0.0",
        "mongoose": "^5.3.1",
        "mongoose-paginate": "^5.0.3",
        "morgan": "^1.9.1",
        "shortid": "^2.2.13",
        "subscriptions-transport-ws": "^0.9.15"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "eslint": "^5.6.1",
        "nodemon": "^1.18.4"
    }
}
